<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence                   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
   
    
    <persistence-unit name="primaryPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <properties>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hbm2ddl.auto" value="validate"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.connection.autocommit" value="false"/>
            
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/sample_struts?useSSL=false&amp;createDatabaseIfNotExist=true&amp;autoReconnect=true" />
            <property name="hibernate.connection.username" value="simiyu" />
            <property name="hibernate.connection.password" value="Root@123"/>  
            
        </properties>
    </persistence-unit>
    
</persistence>
